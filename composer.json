{
  "name": "dparadiz/api-frame",
  "description": "Api infrastructure frame",
  "minimum-stability": "dev",
  "type": "project",
  "authors": [
    {
      "name": "DParadiz",
      "email": "dparadiz@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Api\\": "src/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:dParadiz/workflow.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:dParadiz/dparadiz-work-flow-http-handler.git"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "guzzlehttp/psr7": "^1.6",
    "psr/http-server-middleware": "^1.0",
    "php-di/php-di": "^6.1",
    "dparadiz/work-flow-http-handler": "dev-main"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.99",
    "phpunit/phpunit": "^9.5.0"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan  analyse -l 8 src"
  }
}
